int longestOnes(int* a, int n, int k){

int i, count = 0, max_count = 0, left = 0, right = 0, zcount = 0;
for(i = 0; i<n; i++){
    if(a[i] == 0)
        zcount++;
    
    while(zcount > k){
        if(a[left] == 0)
            zcount--;
        left++;
    }
    count = i - left + 1;
    right++;
    if(count > max_count)
        max_count = count;
        
}
    return max_count;

}
